{% extends 'responsable/homepage_responsable.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .event-detail-image { max-width: 100%; max-height: 400px; object-fit: cover; border-radius: 8px; margin: 0 auto; display: block; }
        .card-body { text-align: left; }
    </style>
{% endblock %}

{% block body %}
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
        <div>
            <h3 class="fw-bold mb-3">{{ page_title }}</h3>
            <h6 class="op-7 mb-2">Event Details</h6>
        </div>
        <div class="ms-md-auto py-2 py-md-0">
            <a href="{{ path('app_events_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    {% if event.imageUrl %}
                        <img src="{{ asset(event.imageUrl) }}" alt="{{ event.nom }}" class="event-detail-image mb-4">
                    {% endif %}
                    <h5 class="card-title">{{ event.nom }}</h5>
                    <p><strong>Description:</strong> {{ event.description|default('No description') }}</p>
                    <p><strong>Date:</strong> {{ event.date|date('d/m/Y') }}</p>
                    <p><strong>Time:</strong> {{ event.getHeureDebut|date('H:i:s') }} - {{ event.getHeureFin|date('H:i:s') }}</p>
                    <p><strong>Type:</strong> {{ event.type ? event.type.label : 'Not defined' }}</p>
                    <p><strong>Reward:</strong> {{ event.reward ? event.reward.label : 'None' }}</p>
                    <p><strong>Location:</strong> {{ event.lieu|default('Not specified') }}</p>
                    <p><strong>Coordinates:</strong> {{ event.latitude|default('N/A') }}, {{ event.longitude|default('N/A') }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}