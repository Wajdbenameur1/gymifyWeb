{% block javascripts %}
  {{ parent() }}
  <script>
    document.addEventListener('DOMContentLoaded', function () {

      // 1) Code d’ajout de commentaire
      document.querySelectorAll('form[data-post-id]').forEach(function (form) {
        form.addEventListener('submit', function (e) {
          e.preventDefault();

          var formData = new FormData(this);
          var postId = this.dataset.postId;
          var submitButton = this.querySelector('button[type="submit"]');
          submitButton.disabled = true;
          submitButton.innerText = "Envoi...";

          fetch(
            "{{ path('app_comment_new', { postId: '__postId__' }) }}"
              .replace('__postId__', postId),
            {
              method: "POST",
              body: formData,
            }
          )
            .then(response => {
              if (!response.ok) {
                return response.json().then(data => { throw data; });
              }
              return response.json();
            })
            .then(data => {
              var commentsSection = document.querySelector(
                `#commentsModal${postId} .flex-grow-1`
              );
              var commentHtml = `
                <div class="d-flex align-items-start mb-3">
                  <img src="${data.user.avatar}" alt="Avatar"
                       class="rounded-circle me-2"
                       style="width:32px;height:32px;object-fit:cover;">
                  <div>
                    <strong>${data.user.nom}</strong>
                    <p class="mb-1">${data.content}</p>
                    <small class="text-muted">${data.createdAt}</small>
                  </div>
                </div>
              `;
              commentsSection.insertAdjacentHTML('afterbegin', commentHtml);
              form.reset();
            })
            .catch(error => {
              var errorDiv = document.getElementById("comment-errors-" + postId);
              errorDiv.innerHTML = error.errors
                ? error.errors.join('<br>')
                : 'refresh';
              errorDiv.style.display = 'block';
            })
            .finally(() => {
              submitButton.disabled = false;
              submitButton.innerText = "Publier";
            });
        });
      });

      // 2) Code de suppression AJAX de commentaire
      document.querySelectorAll('.delete-comment-form').forEach(function (form) {
        form.addEventListener('submit', function (e) {
          e.preventDefault();
          if (!confirm('Voulez‑vous vraiment supprimer ce commentaire ?')) {
            return;
          }

          var postId = this.dataset.postId;
          var formData = new FormData(this);
          var submitBtn = this.querySelector('button[type="submit"]');
          submitBtn.disabled = true;

          fetch(this.action, {
            method: 'POST',
            body: formData,
          })
            .then(response => {
              if (!response.ok) throw new Error('Erreur suppression');
              return response.text();
            })
            .then(() => {
              // Supprime la balise contenant le commentaire
              var commentDiv = form.closest('.d-flex.align-items-start.mb-3');
              if (commentDiv) commentDiv.remove();

              // Met à jour le compteur de commentaires sur le bouton du modal
              var btnModal = document.querySelector(
                `[data-bs-target="#commentsModal${postId}"]`
              );
              if (btnModal) {
                var count = parseInt(btnModal.innerText) - 1;
                btnModal.innerText =
                  count + ' Commentaire' + (count > 1 ? 's' : '');
              }
            })
            .catch(err => {
              console.error(err);
              alert('Impossible de supprimer le commentaire.');
            })
            .finally(() => {
              submitBtn.disabled = false;
            });
        });
      });

    }); // fin DOMContentLoaded
  </script>
