            .form-control:focus {
                box-shadow: 0 0 0 0.25rem rgba(102, 126, 234, 0.25);
            }
            .image-preview-container {
                min-height: 200px;
                position: relative;
                display: flex;
                align-items: center;
                justify-content: center;
            }
            .image-preview {
                max-height: 200px;
                object-fit: contain;
                border-radius: 8px;
            }
            .is-invalid {
                border: 1px solid #dc3545 !important;
            }
            .invalid-feedback {
                color: #dc3545;
                font-size: 0.875em;
            }
            .border-dashed {
                border: 2px dashed #dee2e6;
            }
            .image-upload-container:hover .border-dashed {
                border-color: #3a7bd5;
            }
            .border-danger {
                border-color: #dc3545 !important;
            }
            .btn-outline-primary {
                transition: all 0.3s ease;
            }
            .btn-outline-primary:hover {
                background-color: #007bff;
                color: white;
            }
            #submitBtn:disabled {
                opacity: 0.7;
                cursor: not-allowed;
            }
            .input-group-text {
                min-width: 45px;
                justify-content: center;
            }
            .footer {
                position: relative;
                bottom: 0;
                width: 100%;
                font-size: 0.9rem;
            }
        </style>
