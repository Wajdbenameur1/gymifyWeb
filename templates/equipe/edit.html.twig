            <div class="main-panel">
                <div class="main-header">
                    <!-- Header reste inchangÃ© -->
                </div>
                <div class="container">
                    <div class="page-inner">
                        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
                            <div>
                                <h3 class="fw-bold mb-3">Edit Team</h3>
                                <h6 class="op-7 mb-2">Edit an Existing Team</h6>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-lg-10">
                                <div class="card shadow-sm">
                                    <div class="card-body p-4">
                                        <form method="post" action="{{ path('app_equipe_edit', {'id': equipe.id}) }}" enctype="multipart/form-data" class="needs-validation" novalidate id="equipeForm">
                                            <div class="mb-3">
                                                <label for="equipe_nom" class="form-label fw-bold text-muted small">Team Name</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-light"><i class="fas fa-heading text-primary"></i></span>
                                                    <input type="text" id="equipe_nom" name="equipe[nom]" maxlength="255" class="form-control" value="{{ equipe.nom }}" placeholder="Enter team name" required="required"/>
                                                </div>
                                                <div class="invalid-feedback">Please enter a team name (max 255 characters).</div>
                                            </div>
                                            <div class="mb-3 image-upload-container">
                                                <label for="imageInput" class="form-label fw-bold text-muted small">Team Image</label>
                                                <div class="image-preview-container text-center mb-3 position-relative">
                                                    <img id="imagePreview" src="{{ equipe.imageUrl ? asset(equipe.imageUrl) : '' }}" class="image-preview shadow-sm mx-auto d-block" style="display: {{ equipe.imageUrl ? 'block' : 'none' }};">
                                                    <div id="placeholderText" class="position-absolute top-50 start-50 translate-middle w-100 py-5 border-2 border-dashed rounded-3 bg-light" style="display: {{ equipe.imageUrl ? 'none' : 'block' }};">
                                                        <i class="fas fa-camera fa-3x text-muted mb-3 d-block"></i>
                                                        <p class="text-muted mb-0">No image selected</p>
                                                    </div>
                                                </div>
                                                <div class="d-flex gap-3">
                                                    <div class="flex-grow-1">
                                                        <input type="file" id="imageInput" name="equipe[imageFile]" class="form-control d-none" accept="image/*"/>
                                                        <label for="imageInput" class="btn btn-outline-primary w-100 py-2"><i class="fas fa-camera me-2"></i>Choose Image</label>
                                                    </div>
                                                    <button type="button" id="removeImageBtn" class="btn btn-outline-danger py-2" style="display: {{ equipe.imageUrl ? 'block' : 'none' }};"><i class="fas fa-trash-alt me-2"></i>Remove</button>
                                                </div>
                                                <div class="invalid-feedback">Please select a valid image (JPG, PNG, WEBP, max 2MB).</div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="equipe_niveau" class="form-label fw-bold text-muted small">Level</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-light"><i class="fas fa-list text-primary"></i></span>
                                                    <select id="equipe_niveau" name="equipe[niveau]" class="form-control" required="required">
                                                        <option value="DEBUTANT" {{ equipe.niveau.value == 'DEBUTANT' ? 'selected' : '' }}>Debutant</option>
                                                        <option value="INTERMEDIAIRE" {{ equipe.niveau.value == 'INTERMEDIAIRE' ? 'selected' : '' }}>Intermediaire</option>
                                                        <option value="AVANCE" {{ equipe.niveau.value == 'AVANCE' ? 'selected' : '' }}>Avance</option>
                                                        <option value="PROFESSIONNEL" {{ equipe.niveau.value == 'PROFESSIONNEL' ? 'selected' : '' }}>Professionnel</option>
                                                    </select>
                                                </div>
                                                <div class="invalid-feedback">Please select a level.</div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="equipe_nombre_membres" class="form-label fw-bold text-muted small">Number of Members</label>
                                                <div class="input-group">
                                                    <span class="input-group-text bg-light"><i class="fas fa-users text-primary"></i></span>
                                                    <input type="number" id="equipe_nombre_membres" name="equipe[nombre_membres]" class="form-control" value="{{ equipe.nombreMembres }}" min="0" required="required"/>
                                                </div>
                                                <div class="invalid-feedback">Please enter a valid number of members (0 or more).</div>
                                            </div>
                                            {{ form_row(form._token) }}
                                            <div class="d-flex justify-content-end gap-3">
                                                <button type="button" id="cancelBtn" class="btn btn-outline-secondary"><i class="fas fa-arrow-left me-2"></i>Cancel</button>
                                                <button type="submit" id="submitBtn" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
