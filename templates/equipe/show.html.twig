{% extends 'responsable/homepage_responsable.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .team-detail-image {
            max-width: 100%;
            max-height: 400px;
            object-fit: cover;
            border-radius: 8px;
            margin: 0 auto;
            display: block;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .card-body {
            text-align: left;
        }
        .card {
            border: none;
            border-radius: 12px;
            overflow: hidden;
        }
        .card-title {
            font-size: 1.75rem;
            font-weight: bold;
            color: #2c3e50;
        }
        .btn-outline-secondary {
            border-radius: 20px;
            padding: 8px 20px;
            font-weight: 500;
        }
        .btn-outline-secondary:hover {
            background-color: #f1f3f5;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
        <div>
            <h3 class="fw-bold mb-3">{{ page_title }}</h3>
            <h6 class="op-7 mb-2">Team Details</h6>
        </div>
        <div class="ms-md-auto py-2 py-md-0">
            <a href="{{ path('app_equipe_index') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    {% if equipe.imageUrl %}
                        <img src="{{ asset(equipe.imageUrl) }}" alt="{{ equipe.nom }}" class="team-detail-image mb-4">
                    {% endif %}
                    <h5 class="card-title">{{ equipe.nom }}</h5>
                    <p><strong>Level:</strong> {{ equipe.niveau.value|capitalize }}</p>
                    <p><strong>Number of Members:</strong> {{ equipe.nombreMembres }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}