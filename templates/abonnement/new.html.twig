{% extends 'responsable/homepage_responsable.html.twig' %}

{% block title %}Créer un nouvel abonnement{% endblock %}

{% block body %}
<div class="container animate__animated animate__fadeIn">
    <h1 class="text-gradient mb-4">Créer un nouvel abonnement</h1>

    <div class="card card-round shadow-lg border-0">
        <div class="card-body p-5">
            {{ form_start(form, {'attr': {'id': 'abonnement-form'}}) }}
                {# Afficher les erreurs globales du formulaire #}
                {% if form_errors(form) %}
                    <div class="alert alert-danger" role="alert">
                        {{ form_errors(form) }}
                    </div>
                {% endif %}

                <div class="form-group mb-4">
                    {{ form_label(form.type, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control shadow-sm'}}) }}
                    {% if form_errors(form.type) %}
                        <div class="text-danger mt-1">{{ form_errors(form.type) }}</div>
                    {% endif %}
                </div>
                <div class="form-group mb-4">
                    {{ form_label(form.tarif, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.tarif, {'attr': {'class': 'form-control shadow-sm', 'id': 'tarif'}}) }}
                    {% if form_errors(form.tarif) %}
                        <div class="text-danger mt-1">{{ form_errors(form.tarif) }}</div>
                    {% endif %}
                    <div class="text-danger mt-1" id="tarif-error" style="display: none;">Veuillez entrer un tarif. Ce champ ne peut pas être vide.</div>
                </div>
                <div class="form-group mb-4">
                    {{ form_label(form.activite, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.activite, {'attr': {'class': 'form-control shadow-sm'}}) }}
                    {% if form_errors(form.activite) %}
                        <div class="text-danger mt-1">{{ form_errors(form.activite) }}</div>
                    {% endif %}
                </div>
                <div class="form-group mb-4">
                    {{ form_label(form.salle, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.salle, {'attr': {'class': 'form-control shadow-sm'}}) }}
                    {% if form_errors(form.salle) %}
                        <div class="text-danger mt-1">{{ form_errors(form.salle) }}</div>
                    {% endif %}
                </div>
                <div class="d-flex gap-3 mt-5">
                    <button type="submit" class="btn btn-primary btn-gradient px-4 py-2 rounded-pill shadow">
                        <i class="fas fa-save me-2"></i>Créer
                    </button>
                    <a href="{{ path('responsable_abonnement_index') }}" class="btn btn-outline-secondary px-4 py-2 rounded-pill">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <style>
        .text-gradient {
            background: linear-gradient(45deg, #3f51b5, #2196f3);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            display: inline-block;
        }
        .btn-gradient {
            background: linear-gradient(45deg, #3f51b5, #2196f3);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-gradient:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(33, 150, 243, 0.3);
        }
        .text-danger {
            color: #dc3545 !important;
            font-size: 0.875rem;
            font-weight: 500;
            margin-top: 0.25rem;
            padding: 0.25rem 0;
        }
    </style>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.getElementById('abonnement-form').addEventListener('submit', function (event) {
            const tarifInput = document.getElementById('tarif');
            const tarifError = document.getElementById('tarif-error');

            if (!tarifInput.value.trim()) {
                event.preventDefault(); // Empêche la soumission du formulaire
                tarifError.style.display = 'block'; // Affiche le message d'erreur
            } else {
                tarifError.style.display = 'none'; // Cache le message d'erreur
            }
        });
    </script>
{% endblock %}