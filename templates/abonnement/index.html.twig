{% extends 'responsable/homepage_responsable.html.twig' %}

{% block title %}Gestion des abonnements{% endblock %}

{% block body %}
<div class="container animate__animated animate__fadeIn">
    <h1 class="text-gradient mb-4">Gestion des abonnements</h1>

    <!-- Filtres -->
    <div class="card filter-card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="type" class="form-label">Type d'abonnement</label>
<select name="type" id="type" class="form-select">
    <option value="">Tous les types</option>
    <option value="mois" {{ current_type_filter == 'mois' ? 'selected' : '' }}>Mensuel</option>
    <option value="trimestre" {{ current_type_filter == 'trimestre' ? 'selected' : '' }}>Trimestriel</option>
    <option value="année" {{ current_type_filter == 'année' ? 'selected' : '' }}>Annuel</option>
</select>
                </div>
                <div class="col-md-4">
                    <label for="activity" class="form-label">Activité</label>
                    <select name="activity" id="activity" class="form-select">
                        <option value="">Toutes les activités</option>
                        {% for activity in activities %}
                            <option value="{{ activity.id }}" {{ current_activity_filter == activity.id ? 'selected' : '' }}>
                                {{ activity.nom }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-filter me-1"></i> Filtrer
                    </button>
                    <a href="{{ path('responsable_abonnement_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-1"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Tableau des abonnements -->
    <div class="card card-round shadow-lg border-0 overflow-hidden">
        <div class="card-header bg-transparent">
            <div class="card-head-row justify-content-between align-items-center">
                <div class="card-title text-gradient h4">Liste des abonnements</div>
                <div class="card-tools">
                    <a href="{{ path('responsable_abonnement_new') }}" class="btn btn-primary btn-gradient px-4 py-2 rounded-pill shadow">
                        <i class="fas fa-plus me-2"></i> Ajouter
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3">ID</th>
                            <th class="py-3 sortable" data-sort="type">
                                Type <i class="fas fa-sort ms-1"></i>
                            </th>
                            <th class="py-3">Tarif</th>
                            <th class="py-3 sortable" data-sort="activite">
                                Activité <i class="fas fa-sort ms-1"></i>
                            </th>
                            <th class="py-3 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for abonnement in abonnements %}
                        <tr class="animate__animated animate__fadeInUp" style="animation-delay: {{ loop.index * 0.05 }}s">
                            <td class="fw-bold">{{ abonnement.id }}</td>
                            <td>
                                <span class="badge bg-primary bg-gradient rounded-pill px-3 py-1">
                                    {{ abonnement.type.getLabel() }}
                                </span>
                            </td>
                            <td class="fw-bold text-success">{{ abonnement.tarif }} €</td>
                            <td>{{ abonnement.activite.nom }}</td>
                            <td class="text-end">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="{{ path('responsable_abonnement_edit', {'id': abonnement.id}) }}" 
                                       class="btn btn-sm btn-warning rounded-circle shadow-sm"
                                       data-bs-toggle="tooltip"
                                       title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('responsable_abonnement_delete', {'id': abonnement.id}) }}" 
                                          style="display: inline-block;" 
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet abonnement?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ abonnement.id) }}">
                                        <button class="btn btn-sm btn-danger rounded-circle shadow-sm"
                                                data-bs-toggle="tooltip"
                                                title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-inbox fa-3x mb-3"></i><br>
                                Aucun abonnement trouvé
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(63, 81, 181, 0.05);
        transform: scale(1.01);
        transition: all 0.2s ease;
    }
    .badge.bg-gradient {
        background: linear-gradient(45deg, #3f51b5, #2196f3);
    }
    /* Filtres */
    .card.filter-card {
        border: none;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        border-radius: 10px;
    }
    .form-select {
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #e0e0e0;
        transition: all 0.3s;
    }
    .form-select:focus {
        border-color: #3f51b5;
        box-shadow: 0 0 0 0.25rem rgba(63, 81, 181, 0.25);
    }
    .sortable {
        cursor: pointer;
        transition: all 0.2s;
    }
    .sortable:hover {
        color: #3f51b5;
    }
</style>

{% block javascripts %}
{{ parent() }}
<script>
    // Tri des colonnes
    document.querySelectorAll('.sortable').forEach(header => {
        header.addEventListener('click', () => {
            const sortBy = header.dataset.sort;
            const url = new URL(window.location.href);
            url.searchParams.set('sort', sortBy);
            url.searchParams.set('direction', 
                url.searchParams.get('direction') === 'asc' ? 'desc' : 'asc');
            window.location.href = url.toString();
        });
    });

    // Initialisation des tooltips
    document.addEventListener('DOMContentLoaded', function() {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
{% endblock %}
{% endblock %}