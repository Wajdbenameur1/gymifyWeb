<div class="main-header">
    <div class="main-header-logo">
        <div class="logo-header" data-background-color="dark">
            <a href="{{ path('app_home') }}" class="logo">
                <img src="{{ asset('img/kaiadmin/logo_light.svg') }}" alt="Logo" class="navbar-brand" height="20">
            </a>
            <div class="nav-toggle">
                <button class="btn btn-toggle toggle-sidebar">
                    <i class="gg-menu-right"></i>
                </button>
                <button class="btn btn-toggle sidenav-toggler">
                    <i class="gg-menu-left"></i>
                </button>
            </div>
            <button class="topbar-toggler more">
                <i class="gg-more-vertical-alt"></i>
            </button>
        </div>
    </div>
    
    <nav class="navbar navbar-header navbar-header-transparent navbar-expand-lg border-bottom">
        <div class="container-fluid">
        
            <form class="navbar navbar-header-left navbar-expand-lg navbar-form nav-search p-0 d-none d-lg-flex">
    <div class="input-group">
        <div class="input-group-prepend">
            <button type="button" class="btn btn-search pe-1" id="searchButton">
                <i class="fa fa-search search-icon"></i>
            </button>
        </div>
        <input 
            type="text" 
            id="globalSearchInput" 
            placeholder="{{ 'search.placeholder'|trans }}" 
            class="form-control" 
            aria-label="{{ 'search.label'|trans }}"
        >
    </div>
</form>

            <ul class="navbar-nav topbar-nav ms-md-auto align-items-center">
                {# SÃ©lecteur de langue #}
                <li class="nav-item me-2">
                    {% include 'partials/_language_selector.html.twig' %}
                </li>
                
                {# Menu utilisateur et notifications #}
                <li class="nav-item topbar-user dropdown hidden-caret">
                    <a class="dropdown-toggle profile-pic" data-bs-toggle="dropdown" href="#" aria-expanded="false">
                        <div class="avatar-sm">
                            <img src="{{ asset('img/kaiadmin/profile.jpg') }}" alt="..." class="avatar-img rounded-circle">
                        </div>
                        <span class="profile-username">
                            <span class="op-7">{{ 'navbar.greeting'|trans }},</span>
                            <span class="fw-bold">
                                {% if app.user %}
                                    {{ app.user.nom }}
                                {% else %}
                                    {{ 'navbar.guest'|trans }}
                                {% endif %}
                            </span>
                        </span>
                    </a>
                    <ul class="dropdown-menu dropdown-user animated fadeIn">
                        <div class="dropdown-user-scroll scrollbar-outer">
                            <li>
                                <div class="user-box">
                                    <div class="avatar-lg">
                                        <img src="{{ asset('img/kaiadmin/profile.jpg') }}" alt="image profile" class="avatar-img rounded">
                                    </div>
                                    <div class="u-text">
                                        <h4>
                                            {% if app.user %}
                                                {{ app.user.nom }}
                                            {% else %}
                                                {{ 'navbar.guest'|trans }}
                                            {% endif %}
                                        </h4>
                                        <p class="text-muted">
                                            {% if app.user %}
                                                {{ app.user.email }}
                                            {% else %}
                                                guest@example.com
                                            {% endif %}
                                        </p>
                                        <a href="{{ path('app_profile') }}" class="btn btn-xs btn-secondary btn-sm">{{ 'navbar.view_profile'|trans }}</a>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('app_profile') }}">{{ 'navbar.my_profile'|trans }}</a>
                                <div class="dropdown-divider"></div>
                                {% if app.user %}
                                    <a class="dropdown-item" href="">{{ 'navbar.logout'|trans }}</a>
                                {% else %}
                                    <a class="dropdown-item" href="{{ path('app_login') }}">{{ 'navbar.login'|trans }}</a>
                                {% endif %}
                            </li>
                        </div>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
</div>