{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.commande) }}
                {{ form_widget(form.commande, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.commande) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.amount) }}
                {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.amount) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.payment_method) }}
                {{ form_widget(form.payment_method, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.payment_method) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.status) }}
                {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.status) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.payment_date) }}
                {{ form_widget(form.payment_date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.payment_date) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.transaction_id) }}
                {{ form_widget(form.transaction_id, {'attr': {'class': 'form-control', 'placeholder': 'Enter transaction ID'}}) }}
                {{ form_errors(form.transaction_id) }}
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        <a href="{{ path('app_payment_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
{{ form_end(form) }} 