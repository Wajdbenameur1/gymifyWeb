{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">Liste des Utilisateurs</h1>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        {% endfor %}

        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-header bg-gradient-primary text-white py-3 rounded-top-4">
                <h5 class="mb-0"><i class="fas fa-users me-2"></i>Utilisateurs</h5>
            </div>
            <div class="card-body p-4">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Image</th>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Email</th>
                                <th>Rôle</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>
                                        {% if user.imageUrl %}
                                            <img src="{{ asset('uploads/users/' ~ user.imageUrl) }}"
                                                 alt="{{ user.nom|capitalize }} {{ user.prenom|capitalize }}"
                                                 class="rounded-circle shadow-sm"
                                                 style="width: 50px; height: 50px; object-fit: cover;">
                                        {% else %}
                                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center"
                                                 style="width: 50px; height: 50px;">
                                                <i class="fas fa-user text-muted"></i>
                                            </div>
                                        {% endif %}
                                    </td>
                                    <td>{{ user.nom|capitalize }}</td>
                                    <td>{{ user.prenom|capitalize }}</td>
                                    <td>{{ user.email }}</td>
                                   <td>
                                    <span class="badge
    {% if user.role.value == 'admin' %}bg-danger
    {% elseif user.role.value == 'entraineur' %}bg-warning
    {% elseif user.role.value == 'sportif' %}bg-primary
    {% elseif user.role.value == 'responsable_salle' %}bg-info
    {% else %}bg-secondary{% endif %}">
    {{ user.role.value|capitalize }}
</span>

</td>

                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="{{ path('user_show', {'id': user.id}) }}"
                                               class="btn btn-sm btn-outline-info rounded-pill"
                                               data-bs-toggle="tooltip"
                                               title="Voir">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_user_update', {'id': user.id}) }}"
                                               class="btn btn-sm btn-outline-primary rounded-pill"
                                               data-bs-toggle="tooltip"
                                               title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="{{ path('user_delete', {'id': user.id}) }}"
                                                  method="POST"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit"
                                                        class="btn btn-sm btn-outline-danger rounded-pill"
                                                        data-bs-toggle="tooltip"
                                                        title="Supprimer">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center py-4 text-muted">
                                        <i class="fas fa-info-circle me-2"></i>Aucun utilisateur trouvé
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered table-sm text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Rôles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.nom | capitalize }}</td>
                            <td>{{ user.prenom | capitalize }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {{ user.roles | join(', ') }}
                            </td>
                            <td>
                                <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary btn-sm">Modifier</a>
                                <form action="{{ path('user_delete', { 'id': user.id }) }}" method="POST" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-muted">Aucun utilisateur trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
