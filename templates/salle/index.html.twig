{% extends 'admin/homepageadmin.html.twig' %}

{% block title %}Gym Rooms | Premium Dashboard{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary: #5e35b1;
            --primary-light: #7c4dff;
            --primary-dark: #4527a0;
            --secondary: #ff4081;
            --accent: #ffab40;
            --success: #00c853;
            --info: #00b8d4;
            --warning: #ff9100;
            --danger: #ff1744;
            --light: #f5f5f5;
            --dark: #212121;
            --gray: #757575;
            --light-gray: #f5f5f5;
            --border: #e0e0e0;
            --radius-lg: 16px;
            --radius-md: 12px;
            --radius-sm: 8px;
            --shadow-sm: 0 1px 2px rgba(0,0,0,0.08);
            --shadow: 0 4px 12px rgba(0,0,0,0.1);
            --shadow-md: 0 8px 24px rgba(0,0,0,0.12);
            --shadow-lg: 0 16px 32px rgba(0,0,0,0.15);
            --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            --glass: rgba(255, 255, 255, 0.08);
        }

        body {
            background-color: #fafafa;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        .glassmorphism {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .dashboard-container {
            max-width: 1800px;
            margin: 0 auto;
            padding: 2rem;
        }

        /* Header Section */
        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            margin-bottom: 3rem;
            position: relative;
        }

        .dashboard-header::after {
            content: '';
            position: absolute;
            bottom: -1.5rem;
            left: 0;
            width: 100%;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--border), transparent);
        }

        .dashboard-title-container {
            position: relative;
        }

        .dashboard-title {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
            letter-spacing: -0.5px;
        }

        .dashboard-subtitle {
            color: var(--gray);
            font-size: 1.1rem;
            font-weight: 400;
            max-width: 600px;
            line-height: 1.6;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary), var(--primary-light));
            color: white;
            border: none;
            border-radius: var(--radius-md);
            padding: 1rem 2rem;
            font-weight: 500;
            box-shadow: 0 4px 6px rgba(92, 107, 192, 0.3);
            transition: var(--transition);
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            position: relative;
            overflow: hidden;
        }

        .btn-primary::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, var(--primary-light), var(--secondary));
            opacity: 0;
            transition: var(--transition);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(92, 107, 192, 0.4);
        }

        .btn-primary:hover::after {
            opacity: 1;
        }

        .btn-primary span {
            position: relative;
            z-index: 1;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 1.5rem;
            margin-bottom: 3rem;
        }

        .stat-card {
            background: white;
            border-radius: var(--radius-lg);
            padding: 2rem;
            box-shadow: var(--shadow);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
            border: none;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(to bottom, var(--primary), var(--secondary));
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
        }

        .stat-icon {
            width: 56px;
            height: 56px;
            border-radius: var(--radius-md);
            background: linear-gradient(135deg, var(--primary-light), var(--primary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 8px rgba(94, 53, 177, 0.2);
        }

        .stat-content {
            flex: 1;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark);
            margin: 0;
            line-height: 1;
        }

        .stat-label {
            color: var(--gray);
            font-size: 0.95rem;
            margin-top: 0.5rem;
            font-weight: 500;
        }

        .stat-change {
            display: inline-flex;
            align-items: center;
            font-size: 0.85rem;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            margin-top: 0.75rem;
            background: rgba(0, 200, 83, 0.1);
            color: var(--success);
        }

        /* Rooms Grid */
        .rooms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }

        .room-card {
            background: white;
            border-radius: var(--radius-lg);
            overflow: hidden;
            box-shadow: var(--shadow);
            transition: var(--transition);
            border: none;
            position: relative;
        }

        .room-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-lg);
        }

        .room-image-container {
            height: 220px;
            position: relative;
            overflow: hidden;
        }

        .room-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
        }

        .room-card:hover .room-image {
            transform: scale(1.1);
        }

        .room-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 0.35rem 1rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            backdrop-filter: blur(4px);
        }

        .room-badge.popular {
            background: linear-gradient(135deg, var(--accent), var(--warning));
        }

        .room-body {
            padding: 1.75rem;
        }

        .room-title {
            font-size: 1.4rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 1rem;
            display: -webkit-box;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .room-meta {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            margin-bottom: 1.25rem;
        }

        .room-meta-item {
            display: flex;
            align-items: center;
            font-size: 0.95rem;
            color: var(--gray);
        }

        .room-meta-item i {
            margin-right: 1rem;
            color: var(--primary);
            width: 20px;
            text-align: center;
            font-size: 1.1rem;
        }

        .room-desc {
            color: var(--gray);
            font-size: 0.95rem;
            line-height: 1.6;
            margin: 1.5rem 0;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .room-actions {
            display: flex;
            gap: 1rem;
            padding-top: 1.25rem;
            border-top: 1px solid var(--border);
        }

        .action-btn {
            flex: 1;
            padding: 0.85rem;
            border-radius: var(--radius-sm);
            font-size: 0.9rem;
            font-weight: 500;
            text-align: center;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            position: relative;
            overflow: hidden;
        }

        .action-btn::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255,255,255,0.2);
            opacity: 0;
            transition: var(--transition);
        }

        .action-btn:hover::after {
            opacity: 1;
        }

        .action-btn.view {
            background: var(--primary-light);
            color: var(--primary);
        }

        .action-btn.view:hover {
            background: var(--primary);
            color: white;
            box-shadow: 0 4px 8px rgba(94, 53, 177, 0.3);
        }

        .action-btn.edit {
            background: rgba(0, 184, 212, 0.1);
            color: var(--info);
        }

        .action-btn.edit:hover {
            background: var(--info);
            color: white;
            box-shadow: 0 4px 8px rgba(0, 184, 212, 0.3);
        }

        .action-btn.delete {
            background: rgba(255, 23, 68, 0.1);
            color: var(--danger);
        }

        .action-btn.delete:hover {
            background: var(--danger);
            color: white;
            box-shadow: 0 4px 8px rgba(255, 23, 68, 0.3);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 5rem 2rem;
            background: white;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow);
            border: 2px dashed var(--border);
            max-width: 700px;
            margin: 3rem auto;
            transition: var(--transition);
        }

        .empty-state:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary-light);
        }

        .empty-icon {
            font-size: 5rem;
            margin-bottom: 2rem;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }

        .empty-title {
            font-weight: 800;
            font-size: 2rem;
            color: var(--dark);
            margin-bottom: 1rem;
            letter-spacing: -0.5px;
        }

        .empty-text {
            color: var(--gray);
            font-size: 1.15rem;
            max-width: 500px;
            margin: 0 auto 2.5rem;
            line-height: 1.7;
        }

        /* Alerts */
        .alert {
            border-radius: var(--radius-md);
            padding: 1.25rem 1.75rem;
            margin-bottom: 2.5rem;
            border: none;
            box-shadow: var(--shadow-sm);
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .alert::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
        }

        .alert-success {
            background: rgba(0, 200, 83, 0.08);
            color: var(--success);
        }

        .alert-success::before {
            background: var(--success);
        }

        .alert-danger {
            background: rgba(255, 23, 68, 0.08);
            color: var(--danger);
        }

        .alert-danger::before {
            background: var(--danger);
        }

        .alert i {
            margin-right: 1.25rem;
            font-size: 1.5rem;
        }

        .alert-content {
            flex: 1;
        }

        .alert-title {
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .dashboard-title {
                font-size: 2.25rem;
            }
            
            .rooms-grid {
                grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            }
        }

        @media (max-width: 992px) {
            .dashboard-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1.5rem;
            }
            
            .dashboard-title {
                font-size: 2rem;
            }
        }

        @media (max-width: 768px) {
            .dashboard-container {
                padding: 1.5rem;
            }
            
            .stat-card {
                padding: 1.5rem;
            }
            
            .room-actions {
                flex-wrap: wrap;
            }
            
            .action-btn {
                flex: 0 0 calc(50% - 0.5rem);
            }
        }

        @media (max-width: 576px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }
            
            .rooms-grid {
                grid-template-columns: 1fr;
            }
            
            .action-btn {
                flex: 0 0 100%;
            }
            
            .empty-state {
                padding: 3rem 1.5rem;
            }
            
            .empty-title {
                font-size: 1.75rem;
            }
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .animate-fade-in {
            animation: fadeIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
        }

        .delay-1 { animation-delay: 0.1s; }
        .delay-2 { animation-delay: 0.2s; }
        .delay-3 { animation-delay: 0.3s; }
        .delay-4 { animation-delay: 0.4s; }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="dashboard-container">
        <div class="dashboard-header animate-fade-in">
            <div class="dashboard-title-container">
                <h1 class="dashboard-title">Gym Rooms Dashboard</h1>
                <p class="dashboard-subtitle">Premium management interface for your fitness facilities and spaces</p>
            </div>
            <a href="{{ path('admin_salle_new') }}" class="btn-primary animate-fade-in delay-1">
                <i class="fas fa-plus"></i>
                <span>Add New Room</span>
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success animate-fade-in delay-2">
                <i class="fas fa-check-circle"></i>
                <div class="alert-content">
                    <div class="alert-title">Success</div>
                    <div>{{ message }}</div>
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger animate-fade-in delay-2">
                <i class="fas fa-exclamation-circle"></i>
                <div class="alert-content">
                    <div class="alert-title">Error</div>
                    <div>{{ message }}</div>
                </div>
            </div>
        {% endfor %}

        <div class="stats-grid">
            <div class="stat-card animate-fade-in delay-1">
                <div class="stat-icon">
                    <i class="fas fa-dumbbell"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-value">{{ salles|length }}</h3>
                    <p class="stat-label">Total Rooms</p>
                    <div class="stat-change">
                        <i class="fas fa-arrow-up mr-1"></i> 12% this month
                    </div>
                </div>
            </div>
            <div class="stat-card animate-fade-in delay-2">
                <div class="stat-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-value">36</h3>
                    <p class="stat-label">Active Classes</p>
                    <div class="stat-change">
                        <i class="fas fa-arrow-up mr-1"></i> 5% this month
                    </div>
                </div>
            </div>
            <div class="stat-card animate-fade-in delay-3">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-value">289</h3>
                    <p class="stat-label">Daily Visitors</p>
                    <div class="stat-change">
                        <i class="fas fa-arrow-up mr-1"></i> 8% this week
                    </div>
                </div>
            </div>
            <div class="stat-card animate-fade-in delay-4">
                <div class="stat-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-value">4.9</h3>
                    <p class="stat-label">Average Rating</p>
                    <div class="stat-change">
                        <i class="fas fa-arrow-up mr-1"></i> 0.2 this month
                    </div>
                </div>
            </div>
        </div>

        {% if salles|length > 0 %}
            <div class="rooms-grid">
                {% for salle in salles %}
                    <div class="room-card animate-fade-in" style="animation-delay: {{ loop.index * 0.1 }}s">
                        <div class="room-image-container">
                                                        <img src="{{ salle.urlPhoto ? asset('Uploads/images/' ~ salle.urlPhoto) : asset('images/default-gym.jpg') }}" 
                                 class="room-image" 
                                 alt="{{ salle.nom }}">
                            <span class="room-badge {{ loop.index % 3 == 0 ? 'popular' : '' }}">
                                {{ loop.index % 3 == 0 ? 'Popular' : 'Featured' }}
                            </span>
                        </div>
                        <div class="room-body">
                            <h3 class="room-title">{{ salle.nom }}</h3>
                            <div class="room-meta">
                                <div class="room-meta-item">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>{{ salle.adresse }}</span>
                                </div>
                                <div class="room-meta-item">
                                    <i class="fas fa-phone"></i>
                                    <span>{{ salle.numTel }}</span>
                                </div>
                                <div class="room-meta-item">
                                    <i class="fas fa-envelope"></i>
                                    <span>{{ salle.email }}</span>
                                </div>
                            </div>
                            <p class="room-desc">{{ salle.details }}</p>
                            <div class="room-actions">
                                <a href="{{ path('admin_salle_show', {'id': salle.id}) }}" 
                                   class="action-btn view">
                                    <i class="fas fa-eye"></i> View
                                </a>
                                <a href="{{ path('admin_salle_edit', {'id': salle.id}) }}" 
                                   class="action-btn edit">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form method="post" 
                                      action="{{ path('admin_salle_delete', {'id': salle.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this room?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ salle.id) }}">
                                    <button class="action-btn delete">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state animate-fade-in delay-2">
                <div class="empty-icon">
                    <i class="fas fa-dumbbell"></i>
                </div>
                <h3 class="empty-title">No Gym Rooms Found</h3>
                <p class="empty-text">You haven't added any gym rooms yet. Get started by creating your first premium fitness space now!</p>
                <a href="{{ path('admin_salle_new') }}" class="btn-primary">
                    <i class="fas fa-plus"></i> Create First Room
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enhanced hover effects
            const roomCards = document.querySelectorAll('.room-card');
            roomCards.forEach(card => {
                card.addEventListener('mouseenter', () => {
                    const image = card.querySelector('.room-image');
                    image.style.transform = 'scale(1.1)';
                });
                card.addEventListener('mouseleave', () => {
                    const image = card.querySelector('.room-image');
                    image.style.transform = 'scale(1)';
                });
            });

            // Button ripple effect
            const buttons = document.querySelectorAll('.btn-primary, .action-btn');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    const ripple = document.createElement('span');
                    ripple.className = 'ripple-effect';
                    ripple.style.left = `${x}px`;
                    ripple.style.top = `${y}px`;
                    
                    this.appendChild(ripple);
                    
                    setTimeout(() => {
                        ripple.remove();
                    }, 1000);
                });
            });

            // Scroll animation
            const animateOnScroll = () => {
                const elements = document.querySelectorAll('.animate-fade-in');
                elements.forEach(el => {
                    const elementPosition = el.getBoundingClientRect().top;
                    const windowHeight = window.innerHeight;
                    
                    if (elementPosition < windowHeight - 100) {
                        el.style.opacity = '1';
                        el.style.transform = 'translateY(0)';
                    }
                });
            };

            window.addEventListener('scroll', animateOnScroll);
            animateOnScroll(); // Initialize
        });
    </script>
    <style>
        .ripple-effect {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.4);
            transform: scale(0);
            animation: ripple 0.6s linear;
            pointer-events: none;
        }

        @keyframes ripple {
            to {
                transform: scale(4);
                opacity: 0;
            }
        }
    </style>
{% endblock %}