{% extends 'admin/homepageadmin.html.twig' %}

{% block title %}Gym Management{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #667eea; /* Primary blue */
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* Gradient blue to purple */
            --secondary-color: #6c757d; /* Gray */
            --light-bg: #f8f9fa; /* Light background */
            --danger-color: #dc3545; /* Red for delete */
            --dark: #0f172a; /* Dark text */
            --shadow: rgba(0, 0, 0, 0.1);
            --glow: rgba(102, 126, 234, 0.3); /* Adjusted for primary color */
        }

        /* Conteneur principal avec fond doux */
        .container-fluid {
            padding: 0 2rem;
            background: var(--light-bg);
            min-height: 100vh;
            position: relative;
        }

        /* Header */
        .admin-header {
            background: transparent;
            padding: 2rem 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            z-index: 10;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .admin-header-title {
            font-family: 'Orbitron', sans-serif;
            font-weight: 700;
            font-size: 2rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            text-transform: uppercase;
            letter-spacing: 2px;
            animation: fadeIn 1s ease;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .admin-header-subtitle {
            font-family: 'Nunito', sans-serif;
            font-weight: 400;
            font-size: 1rem;
            color: var(--secondary-color);
            margin-top: 0.5rem;
        }

        .btn-admin-add {
            background: var(--primary-gradient);
            color: white;
            border-radius: 30px;
            padding: 0.6rem 1.5rem;
            font-family: 'Orbitron', sans-serif;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            box-shadow: 0 5px 15px var(--shadow);
            transition: all 0.4s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-admin-add:hover {
            transform: scale(1.1) rotate(2deg);
            box-shadow: 0 10px 25px var(--glow);
        }

        /* Cartes */
        .salle-card {
            background: white;
            border: 1px solid rgba(0, 0, 0, 0.05);
            border-radius: 20px;
            overflow: hidden;
            margin-bottom: 2rem;
            transition: all 0.4s ease;
            position: relative;
            box-shadow: 0 8px 20px var(--shadow);
        }

        .salle-card:hover {
            transform: translateY(-10px) scale(1.02);
            border-color: var(--primary-color);
            box-shadow: 0 15px 35px var(--shadow);
        }

        .salle-image {
            height: 180px;
            width: 100%;
            object-fit: cover;
            transition: all 0.4s ease;
        }

        .salle-card:hover .salle-image {
            filter: brightness(1.1);
        }

        .card-content {
            padding: 1.5rem;
            color: var(--dark);
        }

        .salle-title {
            font-family: 'Orbitron', sans-serif;
            font-weight: 600;
            font-size: 1.3rem;
            color: var(--dark);
            margin-bottom: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .salle-info {
            font-family: 'Nunito', sans-serif;
            font-size: 0.9rem;
            color: var(--secondary-color);
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

        .salle-info i {
            margin-right: 0.6rem;
            color: var(--primary-color);
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }

        .salle-card:hover .salle-info i {
            color: var(--secondary-color);
        }

        .salle-desc {
            font-family: 'Nunito', sans-serif;
            font-size: 0.95rem;
            color: var(--secondary-color);
            line-height: 1.5;
            margin-bottom: 1rem;
            max-height: 3rem;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .card-actions {
            display: flex;
            gap: 0.75rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(0, 0, 0, 0.05);
        }

        .btn-action {
            flex: 1;
            padding: 0.6rem;
            border-radius: 10px;
            font-family: 'Nunito', sans-serif;
            font-weight: 700;
            font-size: 0.85rem;
            text-transform: uppercase;
            text-align: center;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .btn-action::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(120deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: all 0.5s ease;
        }

        .btn-action:hover::before {
            left: 100%;
        }

        .btn-view {
            background: var(--primary-color);
            color: white;
        }

        .btn-view:hover {
            background: #5a4bd8; /* Slightly darker primary */
        }

        .btn-edit {
            background: #28a745; /* Keep green for edit */
            color: white;
        }

        .btn-edit:hover {
            background: #218838;
        }

        .btn-delete {
            background: var(--danger-color);
            color: white;
        }

        .btn-delete:hover {
            background: #c82333;
        }

        /* Ã‰tat vide */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 20px;
            border: 2px dashed rgba(102, 126, 234, 0.2); /* Adjusted for primary color */
            box-shadow: 0 8px 20px var(--shadow);
            animation: float 4s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .empty-state img {
            max-width: 220px;
            margin-bottom: 2rem;
            filter: drop-shadow(0 0 5px var(--shadow));
        }

        .empty-state h3 {
            font-family: 'Orbitron', sans-serif;
            font-weight: 700;
            font-size: 1.8rem;
            color: var(--dark);
            text-transform: uppercase;
        }

        .empty-state p {
            font-family: 'Nunito', sans-serif;
            font-size: 1.1rem;
            color: var(--secondary-color);
            max-width: 450px;
            margin: 0 auto 2rem;
        }

        /* Flash messages */
        .alert {
            border-radius: 12px;
            background: white;
            color: var(--dark);
            border: 1px solid rgba(0, 0, 0, 0.05);
            box-shadow: 0 5px 15px var(--shadow);
            margin-bottom: 1.5rem;
        }

        .alert-success {
            background: rgba(102, 126, 234, 0.1); /* Adjusted for primary color */
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.1); /* Matches danger color */
        }

        /* Responsive */
        @media (max-width: 768px) {
            .admin-header {
                flex-direction: column;
                align-items: flex-start;
                padding: 1.5rem 1rem;
            }

            .btn-admin-add {
                margin-top: 1rem;
                width: 100%;
                justify-content: center;
            }

            .card-actions {
                flex-wrap: wrap;
                gap: 0.5rem;
            }

            .btn-action {
                flex: 0 0 calc(50% - 0.25rem);
            }
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Nunito:wght@300;400;700&display=swap" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="admin-header">
            <div>
                <h1 class="admin-header-title">Gym Management</h1>
                <p class="admin-header-subtitle">Manage your fitness spaces</p>
            </div>
            <a href="{{ path('admin_salle_new') }}" class="btn-admin-add">
                <i class="fas fa-plus"></i> Add Gym
            </a>
        </div>

        {# Flash messages #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% if salles|length > 0 %}
            <div class="row">
                {% for salle in salles %}
                    <div class="col-xl-4 col-lg-6 col-md-6">
                        <div class="salle-card">
                            <img src="{{ salle.urlPhoto ? asset('Uploads/images/' ~ salle.urlPhoto) : asset('images/default-gym.jpg') }}" 
                                 class="salle-image" 
                                 alt="{{ salle.nom }}">
                            <div class="card-content">
                                <h3 class="salle-title">{{ salle.nom }}</h3>
                                <div class="salle-info">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>{{ salle.adresse }}</span>
                                </div>
                                <div class="salle-info">
                                    <i class="fas fa-phone"></i>
                                    <span>{{ salle.numTel }}</span>
                                </div>
                                <div class="salle-info">
                                    <i class="fas fa-envelope"></i>
                                    <span>{{ salle.email }}</span>
                                </div>
                                <p class="salle-desc">
                                    {{ salle.details|length > 100 ? salle.details|slice(0, 100) ~ '...' : salle.details }}
                                </p>
                                <div class="card-actions">
                                    <a href="{{ path('admin_salle_show', {'id': salle.id}) }}" 
                                       class="btn-action btn-view">
                                        <i class="fas fa-eye me-1"></i> View
                                    </a>
                                    <a href="{{ path('admin_salle_edit', {'id': salle.id}) }}" 
                                       class="btn-action btn-edit">
                                        <i class="fas fa-edit me-1"></i> Edit
                                    </a>
                                    <form method="post" action="{{ path('admin_salle_delete', {'id': salle.id}) }}" 
                                          onsubmit="return confirm('Are you sure you want to delete this room?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ salle.id) }}">
                                        <button class="btn-action btn-delete">
                                            <i class="fas fa-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state">
                <img src="{{ asset('images/empty-data.svg') }}" alt="No data">
                <h3>No Rooms Yet</h3>
                <p>Start by adding your first gym room now!</p>
                <a href="{{ path('admin_salle_new') }}" class="btn-admin-add">
                    <i class="fas fa-plus"></i> Add Room
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation des cartes
            const cards = document.querySelectorAll('.salle-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(40px) scale(0.9)';
                setTimeout(() => {
                    card.style.transition = 'all 0.6s cubic-bezier(0.19, 1, 0.22, 1)';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0) scale(1)';
                }, 150 * index);
            });

            // Animation des boutons au survol
            const buttons = document.querySelectorAll('.btn-action, .btn-admin-add');
            buttons.forEach(btn => {
                btn.addEventListener('mouseenter', () => {
                    btn.style.transform = 'scale(1.05) translateY(-2px)';
                });
                btn.addEventListener('mouseleave', () => {
                    btn.style.transform = 'scale(1)';
                });
            });
        });
    </script>
{% endblock %}