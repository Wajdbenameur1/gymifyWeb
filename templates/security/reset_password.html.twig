{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block body %}
    <div class="password-reset-container">
        <h1 class="page-title">Reset Your Password</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <form method="post" class="password-reset-form">
            <div class="form-group">
                <label for="plainPassword">New Password:</label>
                <input type="password" name="plainPassword" id="plainPassword" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password:</label>
                <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-primary">Change My Password</button>
        </form>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background: linear-gradient(to right, #ff7f50, #ff6347); /* Dégradé orange-rouge comme fond */
            color: #fff;
            font-family: Arial, sans-serif;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
        }

        .password-reset-container {
            max-width: 500px;
            width: 100%;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .page-title {
            text-align: center;
            font-size: 28px;
            color:rgb(244, 147, 38); /* Rouge-orangé */
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            margin-top: 8px;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .btn {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
        }

        .btn-primary {
            background-color: rgb(255, 132, 32); /* Orange */
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background-color: #e03e2d; /* Orange foncé */
        }

        .alert {
            margin-top: 20px;
            padding: 15px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
        }

        .alert-success {
            background-color: #28a745;
            color: white;
        }

        .alert-danger {
            background-color: #dc3545;
            color: white;
        }
    </style>
{% endblock %}
