{% extends 'base.html.twig' %}

{% block title %}Statistiques{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/statistics.47b9c690.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
{% endblock %}

{% block body %}
<div class="container stats-container">
    <div class="stats-header">
        <h1>Statistiques Générales</h1>
        <p>Vue d'ensemble des activités sur la plateforme</p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="stats-card posts-chart">
                <div class="stats-card-header">
                    <h2 class="stats-card-title"><i class="fas fa-file-alt me-2"></i> Posts</h2>
                </div>
                <div class="stats-card-body">
                    {{ render_chart(postsChart) }}
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="stats-card comments-chart">
                <div class="stats-card-header">
                    <h2 class="stats-card-title"><i class="fas fa-comments me-2"></i> Commentaires</h2>
                </div>
                <div class="stats-card-body">
                    {{ render_chart(commentsChart) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3 mb-4">
            <div class="stats-card reactions-chart">
                <div class="stats-card-header">
                    <h2 class="stats-card-title"><i class="fas fa-heart me-2"></i> Réactions</h2>
                </div>
                <div class="stats-card-body">
                    {{ render_chart(reactionsChart) }}
                </div>
            </div>
        </div>
    </div>
    
    <div class="text-center mt-4">
        <a href="{{ path('app_sportifdashboard') }}" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i> Retour au Dashboard
        </a>
    </div>
</div>
{% endblock %} 