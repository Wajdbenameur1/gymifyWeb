{% extends 'front/base.html.twig' %}

{% block title %}{{ produit.nom }}{% endblock %}

{% block body %}
<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_front_home') }}">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ produit.nom }}</li>
        </ol>
    </nav>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-6 mb-4">
            {% if produit.imagePath %}
                <img src="{{ asset(produit.imagePath) }}" 
                     class="img-fluid rounded" 
                     alt="{{ produit.nom }}">
            {% else %}
                <div class="bg-light d-flex align-items-center justify-content-center rounded" 
                     style="height: 400px;">
                    <i class="fas fa-image fa-4x text-muted"></i>
                </div>
            {% endif %}
        </div>
        <div class="col-md-6">
            <h1 class="mb-4">{{ produit.nom }}</h1>
            
            <div class="mb-4">
                <h2 class="h4 text-primary mb-3">â‚¬{{ produit.prix|number_format(2) }}</h2>
                
                {% if produit.stock > 0 %}
                    <span class="badge bg-success">In Stock ({{ produit.stock }} available)</span>
                {% else %}
                    <span class="badge bg-danger">Out of Stock</span>
                {% endif %}
            </div>

            <div class="mb-4">
                <h3 class="h5">Category</h3>
                <p>{{ produit.categorie }}</p>
            </div>

            {% if produit.stock > 0 %}
                <form action="{{ path('app_cart_add', {'id': produit.id}) }}" method="post" class="mb-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="input-group" style="width: 150px;">
                                <span class="input-group-text">Qty</span>
                                <input type="number" name="quantity" value="1" min="1" max="{{ produit.stock }}" 
                                       class="form-control">
                            </div>
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-shopping-cart"></i> Add to Cart
                            </button>
                        </div>
                    </div>
                </form>
            {% else %}
                <button class="btn btn-secondary btn-lg" disabled>
                    <i class="fas fa-shopping-cart"></i> Out of Stock
                </button>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 