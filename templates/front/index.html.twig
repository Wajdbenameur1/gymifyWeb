{% extends 'front/base.html.twig' %}

{% block title %}Welcome to our Store{% endblock %}

{% block body %}
<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1>Our Products</h1>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for produit in produits %}
            <div class="col">
                <div class="card h-100">
                    {% if produit.imagePath %}
                        <img src="{{ asset(produit.imagePath) }}" 
                             class="card-img-top" 
                             alt="{{ produit.nom }}"
                             style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                             style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text">
                            <small class="text-muted">Category: {{ produit.categorie }}</small>
                        </p>
                        <p class="card-text">
                            <strong class="text-primary">â‚¬{{ produit.prix|number_format(2) }}</strong>
                        </p>
                        <p class="card-text">
                            {% if produit.stock > 0 %}
                                <span class="badge bg-success">In Stock ({{ produit.stock }})</span>
                            {% else %}
                                <span class="badge bg-danger">Out of Stock</span>
                            {% endif %}
                        </p>
                        <a href="{{ path('app_front_product_show', {'id': produit.id}) }}" class="btn btn-primary">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    No products available at the moment.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %} 