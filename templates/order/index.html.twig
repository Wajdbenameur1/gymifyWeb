{% extends 'base.html.twig' %}

{% block title %}Orders - GestionProduit{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">Orders</h1>
        </div>
    </div>

    {% if orders is empty %}
        <div class="alert alert-info">No orders found.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.orderDate|date('d/m/Y H:i') }}</td>
                            <td>{{ order.customer.name }}</td>
                            <td>
                                <span class="badge bg-{{ order.status == 'completed' ? 'success' : 'warning' }}">
                                    {{ order.status|title }}
                                </span>
                            </td>
                            <td>â‚¬{{ order.totalAmount|number_format(2) }}</td>
                            <td>
                                <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %} 