{% extends 'base.html.twig' %}

{% block title %}Order #{{ order.id }} - GestionProduit{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3">
                Order #{{ order.id }}
                <span class="badge bg-{{ order.status == 'completed' ? 'success' : 'warning' }}">
                    {{ order.status|title }}
                </span>
            </h1>
        </div>
        <div class="col text-end">
            <a href="{{ path('app_order_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Orders
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Order Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Order Date</dt>
                        <dd class="col-sm-8">{{ order.orderDate|date('d/m/Y H:i') }}</dd>

                        <dt class="col-sm-4">Customer</dt>
                        <dd class="col-sm-8">{{ order.customer.name }}</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">{{ order.customer.email }}</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">{{ order.customer.phone }}</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">{{ order.customer.address }}</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Order Items</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in order.orderItems %}
                                    <tr>
                                        <td>{{ item.product.name }}</td>
                                        <td>{{ item.quantity }}</td>
                                        <td>€{{ item.unitPrice|number_format(2) }}</td>
                                        <td>€{{ item.subtotal|number_format(2) }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Total:</th>
                                    <th>€{{ order.totalAmount|number_format(2) }}</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 