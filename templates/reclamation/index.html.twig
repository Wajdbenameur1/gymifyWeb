{% extends 'sportif/base.html.twig' %}

{% block title %}Mes Réclamations{% endblock %}

{% block body %}
<div class="container-fluid px-4 py-5 bg-dark text-light">
    <!-- Header -->
    <h1 class="display-4 fw-bold mb-4 text-orange">
        <i class="fas fa-exclamation-circle me-2"></i>Mes Réclamations
    </h1>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'success' ? 'success' : 'danger' }} alert-dismissible fade show bg-dark border-orange text-light" role="alert">
                <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-triangle' }} me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Filter Form -->
    <div class="card bg-dark border-orange shadow-lg mb-5 rounded-3">
        <div class="card-header bg-orange text-dark fw-bold py-3">
            <i class="fas fa-filter me-2"></i>Filtrer les réclamations
        </div>
        <div class="card-body p-4">
            <form method="get">
                <div class="input-group">
                    <select name="filter" class="form-select bg-dark text-light border-orange" onchange="this.form.submit()">
                        <option value="Tous" {% if filter == 'Tous' %}selected{% endif %}>Tous</option>
                        <option value="En attente" {% if filter == 'En attente' %}selected{% endif %}>⏳ En attente</option>
                        <option value="Traitée" {% if filter == 'Traitée' %}selected{% endif %}>✅ Traité</option>
                    </select>
                    <button type="submit" class="btn btn-orange"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>
    </div>

    <!-- Reclamations List -->
    <div class="card bg-dark border-orange shadow-lg mb-5 rounded-3">
        <div class="card-header bg-orange text-dark fw-bold py-3">
            <i class="fas fa-list me-2"></i>Liste des réclamations
        </div>
        <div class="card-body p-4">
            <ul class="list-group list-group-flush">
                {% for reclamation in reclamations %}
                    <li class="list-group-item bg-dark text-light border-orange mb-3 rounded">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1 text-orange">
                                    <strong>{{ reclamation.sujet }}</strong>
                                    <span class="badge {% if reclamation.statut == 'Traitée' %}bg-success{% else %}bg-warning{% endif %} ms-2">
                                        {{ reclamation.statut }}
                                    </span>
                                </h5>
                                <p class="mb-2">{{ reclamation.description }}</p>
                                {% if reclamation.reponse %}
                                    <div class="alert alert-info bg-dark border-orange text-light mt-2">
                                        <i class="fas fa-comment me-2"></i>Réponse: {{ reclamation.reponse.message }}
                                    </div>
                                {% else %}
                                    <div class="alert alert-warning bg-dark border-orange text-light mt-2">
                                        <i class="fas fa-hourglass-half me-2"></i>En attente de réponse
                                    </div>
                                {% endif %}
                            </div>
                            <form action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" method="post" onsubmit="return confirm('Voulez-vous vraiment supprimer cette réclamation ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash me-1"></i>Supprimer
                                </button>
                            </form>
                        </div>
                    </li>
                {% else %}
                    <li class="list-group-item bg-dark text-light border-orange text-center py-4">
                        <i class="fas fa-info-circle me-2"></i>Aucune réclamation trouvée.
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <!-- Add Reclamation Form -->
    <div class="card bg-dark border-orange shadow-lg rounded-3">
        <div class="card-header bg-orange text-dark fw-bold py-3">
            <i class="fas fa-plus-circle me-2"></i>Ajouter une réclamation
        </div>
        <div class="card-body p-4">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                <div class="mb-3">
                    {{ form_label(form.sujet, null, {'label_attr': {'class': 'form-label text-orange'}}) }}
                    {{ form_widget(form.sujet, {'attr': {'class': 'form-control bg-dark text-light border-orange'}}) }}
                    {{ form_errors(form.sujet, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label text-orange'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control bg-dark text-light border-orange', 'rows': '5'}}) }}
                    {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.statut, null, {'label_attr': {'class': 'form-label text-orange'}}) }}
                    {{ form_widget(form.statut, {'attr': {'class': 'form-select bg-dark text-light border-orange'}}) }}
                    {{ form_errors(form.statut, {'attr': {'class': 'text-danger'}}) }}
                </div>
                <button type="submit" class="btn btn-orange btn-lg rounded-pill">
                    <i class="fas fa-paper-plane me-2"></i>Envoyer
                </button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

<style>
    :root {
        --dark: #1C2526;
        --orange: #F4A261;
    }

    .bg-dark {
        background-color: var(--dark) !important;
    }

    .text-orange {
        color: var(--orange) !important;
    }

    .border-orange {
        border-color: var(--orange) !important;
    }

    .btn-orange {
        background-color: var(--orange);
        border-color: var(--orange);
        color: var(--dark);
        transition: all 0.3s ease;
    }

    .btn-orange:hover {
        background-color: #e68a3e;
        border-color: #e68a3e;
        color: #fff;
    }

    .form-control, .form-select {
        background-color: var(--dark);
        color: #fff;
        border: 1px solid var(--orange);
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        background-color: #2a3435;
        border-color: #e68a3e;
        box-shadow: 0 0 0 0.25rem rgba(244, 162, 97, 0.25);
        color: #fff;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(244, 162, 97, 0.2) !important;
    }

    .alert {
        border-left: 4px solid var(--orange);
    }

    .badge.bg-success {
        background-color: #28a745 !important;
    }

    .badge.bg-warning {
        background-color: #ffc107 !important;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.forEach(tooltipTriggerEl => {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Client-side form validation
        const form = document.querySelector('.needs-validation');
        form.addEventListener('submit', (event) => {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    });
</script>
{% endblock %}