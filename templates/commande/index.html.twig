{% extends 'base.html.twig' %}

{% block title %}Orders Management{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Orders Management</h1>
            <a href="{{ path('app_commande_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Order
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>User ID</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for commande in commandes %}
                    <tr>
                        <td>{{ commande.id }}</td>
                        <td>{{ commande.dateC|date('Y-m-d H:i:s') }}</td>
                        <td>{{ commande.userId }}</td>
                        <td>
                            <span class="badge {% if commande.statut == 'completed' %}bg-success
                                  {% elseif commande.statut == 'processing' %}bg-info
                                  {% elseif commande.statut == 'cancelled' %}bg-danger
                                  {% else %}bg-warning{% endif %}">
                                {{ commande.statut|title }}
                            </span>
                        </td>
                        <td>{{ commande.total|number_format(2, '.', ',') }} â‚¬</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('app_commande_delete', {'id': commande.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No orders found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 