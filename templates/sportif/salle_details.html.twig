    <!-- JavaScript -->
    <script>
        // Function to fetch and refresh events
        function refreshEvents() {
            fetch('{{ path('sportif_salle_events', {'id': salle.id}) }}')
                .then(response => response.json())
                .then(data => {
                    console.log('Fetched events data:', data);
                    const eventsContainer = document.getElementById('events-container');
                    eventsContainer.innerHTML = '';

                    if (data.equipe_events.length === 0) {
                        eventsContainer.innerHTML = `
                            <div class="col-lg-12 text-center">
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle fa-2x mb-3"></i>
                                    <p>No team events scheduled for this gym currently.</p>
                                </div>
                            </div>
                        `;
                        return;
                    }

                    data.equipe_events.forEach(eventData => {
                        const eventHtml = `
                            <div class="col-lg-4 col-md-6">
                                <div class="event-card">
                                    <div class="event-image-wrapper">
                                        <img src="${eventData.imageUrl || '{{ asset('img/event-default.jpg') }}'}" alt="${eventData.nom}">
                                        <div class="event-overlay">
                                            <div class="event-type-badge">${eventData.type}</div>
                                        </div>
                                        <div class="event-date">
                                            <span>${eventData.dateDay}</span>
                                            <p>${eventData.dateMonth}</p>
                                        </div>
                                    </div>
                                    <div class="event-content">
                                        <h3>${eventData.nom}</h3>
                                        <ul class="details-list">
                                            <li>
                                                <i class="fa fa-users icon"></i>
                                                <strong>Team:</strong> ${eventData.equipeNom}
                                            </li>
                                            <li>
                                                <i class="fa fa-info-circle icon"></i>
                                                <strong>Description:</strong> ${eventData.description.slice(0, 60)}...
                                            </li>
                                            <li>
                                                <i class="fa fa-clock-o icon"></i>
                                                <strong>Time:</strong> ${eventData.heureDebut} - ${eventData.heureFin}
                                            </li>
                                            <li>
                                                <i class="fas fa-trophy icon reward-icon"></i>
                                                <strong>Reward:</strong> ${eventData.reward ? eventData.reward.charAt(0).toUpperCase() + eventData.reward.slice(1) : 'None'}
                                            </li>
                                            <li class="location-item">
                                                <i class="fa fa-map-marker icon"></i>
                                                <strong>Location:</strong> <span class="location-text">${eventData.lieu || 'Not specified'}</span>
                                            </li>
                                        </ul>
                                        <div class="event-actions">
                                            <a href="${eventData.detailsUrl}" class="event-btn" data-tooltip="View event details" aria-label="View details for ${eventData.nom}">
                                                <i class="fa fa-info-circle me-2"></i>Details
                                            </a>
                                            <a href="${eventData.joinUrl}" class="join-btn" data-tooltip="Join this event" aria-label="Join ${eventData.nom}">
                                                <i class="fas fa-user-plus me-2"></i>Join
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                        eventsContainer.innerHTML += eventHtml;
                    });
                })
                .catch(error => console.error('Error refreshing events:', error));
        }

        // Refresh events every 30 seconds
        setInterval(refreshEvents, 30000);

        // Initial refresh on page load
        document.addEventListener('DOMContentLoaded', refreshEvents);
    </script>
