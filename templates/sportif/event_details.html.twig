{% extends 'sportif/base.html.twig' %}

{% block title %}Team Event Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
{% endblock %}

{% block body %}
    <!-- Event Details Section -->
    <section class="event-details-section">
        <div class="container">
            <!-- Centered Title -->
            <div class="section-title">
                <h2>Team Event Details</h2>
                <p>Details about the event <strong>{{ equipe_event.event.nom }}</strong> and the team <strong>{{ equipe_event.equipe.nom }}</strong>.</p>
            </div>

            <!-- Back Button and Details Card -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="details-card">
                        <!-- Back Button -->
                        <div class="details-actions mb-4">
                            <a href="{{ path('sportif_salle_details', {'id': equipe_event.event.salle.id}) }}" class="back-btn">
                                <i class="fas fa-arrow-left me-1"></i> Back
                            </a>
                        </div>

                        <!-- Event Image -->
                        {% if equipe_event.event.imageUrl %}
                            <div class="event-image-wrapper">
                                <img src="{{ asset(equipe_event.event.imageUrl) }}" alt="{{ equipe_event.event.nom }}" class="event-image">
                            </div>
                        {% endif %}

                        <!-- Event Details -->
                        <div class="details-section">
                            <h3>Event: {{ equipe_event.event.nom }}</h3>
                            <ul class="details-list">
                                <li>
                                    <i class="fa fa-users icon"></i>
                                    <strong>Team:</strong> {{ equipe_event.equipe.nom }}
                                </li>
                                <li>
                                    <i class="fa fa-users icon"></i>
                                    <strong>Number of Members:</strong> {{ equipe_event.equipe.nombreMembres }}
                                </li>
                                <li>
                                    <i class="fa fa-info-circle icon"></i>
                                    <strong>Description:</strong> {{ equipe_event.event.description|default('No description') }}
                                </li>
                                <li>
                                    <i class="fa fa-calendar icon"></i>
                                    <strong>Date:</strong> {{ equipe_event.event.date|date('d M Y') }}
                                </li>
                                <li>
                                    <i class="fa fa-clock-o icon"></i>
                                    <strong>Time:</strong> {{ equipe_event.event.heureDebut|date('H:i') }} - {{ equipe_event.event.heureFin|date('H:i') }}
                                </li>
                                <li>
                                    <i class="fa fa-tag icon"></i>
                                    <strong>Type:</strong> {{ equipe_event.event.type ? equipe_event.event.type.value|capitalize : 'Not defined' }}
                                </li>
                                <li>
                                    <i class="fa fa-award icon"></i>
                                    <strong>Reward:</strong> {{ equipe_event.event.reward ? equipe_event.event.reward.label|capitalize : 'None' }}
                                </li>
                                <li>
                                    <i class="fa fa-map-marker icon"></i>
                                    <strong>Location:</strong> {{ equipe_event.event.lieu|default('Not specified') }}
                                </li>
                            </ul>
                        </div>

                        <!-- Map for Event Location -->
                        {% if equipe_event.event.latitude and equipe_event.event.longitude %}
                            <div id="map" class="mt-4"></div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Global Styles */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
        * {
            font-family: 'Poppins', sans-serif;
            box-sizing: border-box;
        }

        /* Event Details Section */
        .event-details-section {
            padding: 120px 0;
            background: linear-gradient(135deg, #1e1e1e, #2c3e50);
            color: #fff;
            position: relative;
            overflow: hidden;
            min-height: 100vh;
        }

        /* Centered Title */
        .section-title {
            text-align: center;
            margin-bottom: 60px;
        }

        .section-title h2 {
            font-size: 48px;
            font-weight: 700;
            color: #fff;
            text-transform: uppercase;
            position: relative;
            display: inline-block;
            letter-spacing: 1px;
        }

        .section-title h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, #00d4ff, #007bff);
            border-radius: 2px;
        }

        .section-title p {
            font-size: 18px;
            color: #d1d1d1;
            margin-top: 15px;
            line-height: 1.8;
        }

        /* Details Card */
        .details-card {
            background: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            color: #1e1e1e;
            position: relative;
        }

        /* Event Image */
        .event-image-wrapper {
            text-align: center;
            margin-bottom: 30px;
        }

        .event-image {
            max-width: 100%;
            max-height: 400px;
            object-fit: cover;
            border-radius: 8px;
        }

        /* Details Section */
        .details-section {
            margin-bottom: 30px;
        }

        .details-section h3 {
            font-size: 24px;
            font-weight: 600;
            color: #1e1e1e;
            margin-bottom: 20px;
            border-bottom: 2px solid #00d4ff;
            padding-bottom: 10px;
        }

        /* Details List with Enhanced Icons */
        .details-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .details-list li {
            font-size: 16px;
            color: #666;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 12px;
            line-height: 1.6;
            transition: color 0.3s ease;
        }

        .details-list li:hover {
            color: #1e1e1e;
        }

        .details-list li strong {
            color: #1e1e1e;
            font-weight: 600;
        }

        .details-list .icon {
            color: #007bff;
            font-size: 18px;
            transition: transform 0.3s ease, color 0.3s ease;
        }

        .details-list li:hover .icon {
            transform: scale(1.2);
            color: #00d4ff;
        }

        /* Map Styling */
        #map {
            width: 100%;
            height: 300px;
            border-radius: 8px;
            margin-top: 20px;
        }

        /* Back Button */
        .details-actions {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
        }

        .back-btn {
            display: inline-flex;
            align-items: center;
            padding: 10px 25px;
            border-radius: 50px; /* Ensures it's not a rectangle */
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            text-decoration: none;
            transition: all 0.3s ease;
            background: linear-gradient(90deg, #00d4ff, #007bff);
            color: #fff;
            border: none;
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }

        .back-btn:hover {
            background: linear-gradient(90deg, #007bff, #00d4ff);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 123, 255, 0.5);
        }

        .back-btn i {
            font-size: 12px;
            margin-right: 8px; /* Space between icon and text */
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .event-details-section {
                padding: 80px 0;
            }
            .section-title h2 {
                font-size: 36px;
            }
            .section-title p {
                font-size: 16px;
            }
            .details-card {
                padding: 30px;
            }
            .details-section h3 {
                font-size: 20px;
            }
            .details-list li {
                font-size: 14px;
            }
            .details-list .icon {
                font-size: 16px;
            }
            .event-image {
                max-height: 300px;
            }
            #map {
                height: 250px;
            }
        }

        @media (max-width: 576px) {
            .event-details-section {
                padding: 60px 0;
            }
            .section-title h2 {
                font-size: 28px;
            }
            .section-title p {
                font-size: 14px;
            }
            .details-card {
                padding: 20px;
            }
            .details-section h3 {
                font-size: 18px;
            }
            .details-list li {
                font-size: 13px;
            }
            .details-list .icon {
                font-size: 14px;
            }
            .back-btn {
                width: 100%;
                text-align: center;
                margin: 10px 0;
                justify-content: center;
            }
            .details-actions {
                justify-content: center;
            }
            .event-image {
                max-height: 250px;
            }
            #map {
                height: 200px;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if equipe_event.event.latitude and equipe_event.event.longitude %}
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const latitude = {{ equipe_event.event.latitude|json_encode|raw }};
                const longitude = {{ equipe_event.event.longitude|json_encode|raw }};
                const lieu = {{ equipe_event.event.lieu|json_encode|raw }};

                if (latitude && longitude) {
                    const map = L.map('map').setView([latitude, longitude], 15);

                    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                        attribution: '© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
                        maxZoom: 19
                    }).addTo(map);

                    L.marker([latitude, longitude])
                        .addTo(map)
                        .bindPopup(lieu || 'Event Location')
                        .openPopup();

                    // Ensure map renders correctly
                    setTimeout(() => {
                        map.invalidateSize();
                    }, 100);
                }
            });
        </script>
    {% endif %}
{% endblock %}