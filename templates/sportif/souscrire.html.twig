{% extends 'sportif/base.html.twig' %}

{% block title %}Souscrire à {{ abonnement.type.value|capitalize }} | Gym{% endblock %}

{% block body %}
    <section class="subscription-section spad">
        <div class="container">
            <h1>Souscrire à un Abonnement</h1>
            <p>Vous êtes sur le point de souscrire à l'abonnement suivant :</p>
            <ul>
                <li>Type : {{ abonnement.type.value|capitalize }}</li>
                <li>Tarif : {{ abonnement.tarif }} €</li>
                <li>Activité : {{ abonnement.activite.nom }}</li>
                <li>Salle : {{ abonnement.salle.nom }}</li>
            </ul>
            <p><a href="#" class="primary-btn">Confirmer (non implémenté)</a></p>
            <p><a href="{{ path('sportif_salle_details', {'id': abonnement.salle.id}) }}" class="secondary-btn">Retour</a></p>
        </div>
    </section>

    <style>
        .subscription-section {
            padding: 60px 0;
            background: #f8f9fa;
        }
        h1 {
            font-family: 'Oswald', sans-serif;
            font-size: 36px;
            color: #111;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            font-family: 'Muli', sans-serif;
            font-size: 16px;
            color: #666;
            margin-bottom: 10px;
        }
        .primary-btn, .secondary-btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 5px;
            font-family: 'Oswald', sans-serif;
            font-size: 14px;
            text-transform: uppercase;
            text-decoration: none;
        }
        .primary-btn {
            background: #f36100;
            color: white;
        }
        .primary-btn:hover {
            background: #e04e00;
        }
        .secondary-btn {
            background: #333;
            color: #fff;
            margin-left: 10px;
        }
        .secondary-btn:hover {
            background: #111;
        }
    </style>
{% endblock %}