{% extends 'sportif/base.html.twig' %}

{% block title %}{{ equipe_event.event.salle.nom }} | Join Team and Event{% endblock %}

{% block body %}
    <!-- Join Section -->
    <section class="join-section">
        <div class="container">
            <div class="section-title">
                <span>Join Now</span>
                <h2>Join Team and Event</h2>
                <p>Confirm your participation in the team <strong>{{ equipe_event.equipe.nom }}</strong> for the event <strong>{{ equipe_event.event.nom }}</strong>.</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="join-form">
                        {% for message in app.flashes('error') %}
                            {% if message|trim is not empty %}
                                <div class="alert alert-danger">
                                    <i class="fa fa-exclamation-circle me-2"></i>{{ message }}
                                </div>
                            {% endif %}
                        {% endfor %}

                        {{ form_start(form, {'attr': {'id': 'join-form'}}) }}
                            <div class="form-group">
                                {{ form_label(form.nom, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'value': app.user.nom|default(''), 'aria-label': 'Your last name', 'placeholder': 'Enter your last name'}}) }}
                                {% if form_errors(form.nom) %}
                                    <div class="form-errors">{{ form_errors(form.nom) }}</div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.prenom, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'value': app.user.prenom|default(''), 'aria-label': 'Your first name', 'placeholder': 'Enter your first name'}}) }}
                                {% if form_errors(form.prenom) %}
                                    <div class="form-errors">{{ form_errors(form.prenom) }}</div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'value': app.user.email|default(''), 'aria-label': 'Your email address', 'placeholder': 'Enter your email address'}}) }}
                                {% if form_errors(form.email) %}
                                    <div class="form-errors">{{ form_errors(form.email) }}</div>
                                {% endif %}
                            </div>
                            <div class="form-actions">
                                {{ form_widget(form.submit, {'label': 'Confirm', 'attr': {'class': 'primary-btn', 'data-tooltip': 'Confirm your participation', 'aria-label': 'Confirm participation in the team and event'}}) }}
                                <a href="{{ path('sportif_salle_details', {'id': equipe_event.event.salle.id}) }}" class="secondary-btn" data-tooltip="Cancel and return" aria-label="Cancel and return to salle details">Cancel</a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Global Styles */
        @import url('https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&family=Muli:wght@400;700&display=swap');
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Muli', sans-serif;
        }

        /* Join Section */
        .join-section {
            padding: 120px 0;
            background: linear-gradient(135deg, #1a1a1a 0%, #252525 100%);
            position: relative;
            overflow: hidden;
            color: #ffffff;
        }
        .join-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://www.transparenttextures.com/patterns/subtle-white-feathers.png');
            opacity: 0.05;
            z-index: 0;
        }
        .join-section::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('https://images.unsplash.com/photo-1517836357463-d25dfeac3438?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80') no-repeat center center;
            background-size: cover;
            opacity: 0.1;
            z-index: 0;
        }
        .container {
            position: relative;
            z-index: 1;
        }
        .section-title {
            text-align: center;
            margin-bottom: 60px;
        }
        .section-title span {
            font-family: 'Oswald', sans-serif;
            font-size: 20px;
            font-weight: 500;
            color: #f36100;
            text-transform: uppercase;
            letter-spacing: 3px;
            display: block;
            margin-bottom: 10px;
        }
        .section-title h2 {
            font-family: 'Oswald', sans-serif;
            font-size: 48px;
            font-weight: 700;
            color: #ffffff;
            text-transform: uppercase;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            position: relative;
        }
        .section-title h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 5px;
            background: linear-gradient(90deg, #f36100, #ff8c00);
            border-radius: 3px;
        }
        .section-title p {
            font-size: 18px;
            color: #d1d1d1;
            margin-top: 20px;
            line-height: 1.8;
            font-family: 'Muli', sans-serif;
        }
        .join-form {
            background: rgba(255, 255, 255, 0.95);
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            animation: fadeIn 0.6s ease-in-out;
            backdrop-filter: blur(5px);
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .form-group {
            margin-bottom: 30px;
        }
        .form-label {
            font-size: 16px;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 10px;
            display: block;
            font-family: 'Oswald', sans-serif;
            text-transform: uppercase;
        }
        .form-control {
            width: 100%;
            padding: 14px 18px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            font-family: 'Muli', sans-serif;
            transition: all 0.3s ease;
            background: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        .form-control:focus {
            outline: none;
            border-color: #f36100;
            box-shadow: 0 0 10px rgba(243, 97, 0, 0.3);
            transform: scale(1.01);
        }
        .form-control:disabled {
            background: #f5f5f5;
            cursor: not-allowed;
            opacity: 0.7;
        }
        .form-control::placeholder {
            color: #999999;
            font-family: 'Muli', sans-serif;
            font-size: 14px;
        }
        .form-errors {
            color: #ff4d4d;
            font-size: 14px;
            margin-top: 8px;
            font-family: 'Muli', sans-serif;
        }
        .form-actions {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 40px;
            flex-wrap: wrap;
        }
        .primary-btn, .secondary-btn {
            padding: 14px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 700;
            text-transform: uppercase;
            text-decoration: none;
            font-family: 'Oswald', sans-serif;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
            border: 2px solid transparent;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        .primary-btn {
            background: linear-gradient(90deg, #f36100, #ff8c00);
            color: #ffffff;
        }
        .primary-btn:hover {
            background: linear-gradient(90deg, #ff8c00, #f36100);
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 10px 20px rgba(243, 97, 0, 0.4);
            border-color: #f36100;
        }
        .secondary-btn {
            background: linear-gradient(90deg, #6c757d, #adb5bd);
            color: #ffffff;
        }
        .secondary-btn:hover {
            background: linear-gradient(90deg, #adb5bd, #6c757d);
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 10px 20px rgba(108, 117, 125, 0.4);
            border-color: #6c757d;
        }
        .primary-btn::before, .secondary-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: 0.5s;
        }
        .primary-btn:hover::before, .secondary-btn:hover::before {
            left: 100%;
        }
        .primary-btn[data-tooltip], .secondary-btn[data-tooltip] {
            position: relative;
        }
        .primary-btn[data-tooltip]::after, .secondary-btn[data-tooltip]::after {
            content: attr(data-tooltip);
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            background: #1a1a1a;
            color: #ffffff;
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 12px;
            font-family: 'Muli', sans-serif;
            white-space: nowrap;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            margin-bottom: 10px;
        }
        .primary-btn[data-tooltip]:hover::after, .secondary-btn[data-tooltip]:hover::after {
            opacity: 1;
            visibility: visible;
        }
        .alert {
            margin-bottom: 25px;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            font-family: 'Muli', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .join-section {
                padding: 100px 0;
            }
            .section-title h2 {
                font-size: 40px;
            }
            .join-form {
                padding: 30px;
            }
        }
        @media (max-width: 768px) {
            .join-section {
                padding: 80px 0;
            }
            .section-title h2 {
                font-size: 36px;
            }
            .section-title p {
                font-size: 16px;
            }
            .form-control {
                padding: 12px 15px;
            }
            .form-actions {
                flex-direction: column;
                gap: 15px;
            }
            .primary-btn, .secondary-btn {
                width: 100%;
                padding: 12px 20px;
            }
        }
        @media (max-width: 576px) {
            .section-title h2 {
                font-size: 32px;
            }
            .section-title span {
                font-size: 18px;
            }
            .join-form {
                padding: 20px;
            }
            .form-label {
                font-size: 14px;
            }
            .form-control {
                font-size: 14px;
            }
            .alert {
                font-size: 14px;
            }
        }
    </style>
{% endblock %}