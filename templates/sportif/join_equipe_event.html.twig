{% extends 'sportif/base.html.twig' %}

{% block title %}Join Team and Event{% endblock %}

{% block body %}
    <!-- Join Section -->
    <section class="join-section">
        <div class="container">
            <div class="section-title">
                <h2>Join Team and Event</h2>
                <p>Confirm your participation in the team <strong>{{ equipe_event.equipe.nom }}</strong> for the event <strong>{{ equipe_event.event.nom }}</strong>.</p>
            </div>

            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="join-form">
                        {% for message in app.flashes('error') %}
                            {% if message|trim is not empty %}
                                <div class="alert alert-danger">
                                    {{ message }}
                                </div>
                            {% endif %}
                        {% endfor %}

                        {{ form_start(form, {'attr': {'id': 'join-form'}}) }}
                            <div class="form-group">
                                {{ form_label(form.nom) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'value': app.user.nom|default('')}}) }}
                                {% if form_errors(form.nom) %}
                                    <div class="form-errors">{{ form_errors(form.nom) }}</div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.prenom) }}
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'value': app.user.prenom|default('')}}) }}
                                {% if form_errors(form.prenom) %}
                                    <div class="form-errors">{{ form_errors(form.prenom) }}</div>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'value': app.user.email|default('')}}) }}
                                {% if form_errors(form.email) %}
                                    <div class="form-errors">{{ form_errors(form.email) }}</div>
                                {% endif %}
                            </div>
                            <div class="form-actions">
                                {{ form_widget(form.submit, {'attr': {'class': 'primary-btn', 'aria-label': 'Confirm participation in the team and event'}}) }}
                                <a href="{{ path('sportif_salle_details', {'id': equipe_event.event.salle.id}) }}" class="secondary-btn" aria-label="Cancel and return to salle details">Cancel</a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Global Styles */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
        * {
            font-family: 'Poppins', sans-serif;
            box-sizing: border-box;
        }

        /* Join Section */
        .join-section {
            padding: 100px 0;
            background: linear-gradient(135deg, #1e1e1e, #2c3e50);
            color: #fff;
            position: relative;
            overflow: hidden;
        }
        .section-title {
            text-align: center;
            margin-bottom: 60px;
        }
        .section-title h2 {
            font-size: 48px;
            font-weight: 700;
            color: #fff;
            text-transform: uppercase;
            position: relative;
            display: inline-block;
            letter-spacing: 1px;
        }
        .section-title h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, #00d4ff, #007bff);
            border-radius: 2px;
        }
        .section-title p {
            font-size: 18px;
            color: #d1d1d1;
            margin-top: 15px;
            line-height: 1.8;
        }
        .join-form {
            background: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            animation: fadeIn 0.5s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .form-group {
            margin-bottom: 25px;
        }
        .form-group label {
            font-size: 16px;
            font-weight: 600;
            color: #1e1e1e;
            margin-bottom: 8px;
            display: block;
        }
        .form-control {
            width: 100%;
            padding: 12px 15px;
            border: 1px solid #dcdcdc;
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        .form-control:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
        }
        .form-control:disabled {
            background: #f5f5f5;
            cursor: not-allowed;
        }
        .form-errors {
            color: #ff6b6b;
            font-size: 14px;
            margin-top: 5px;
        }
        .form-actions {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 30px;
        }
        .primary-btn, .secondary-btn {
            display: inline-flex;
            align-items: center;
            padding: 12px 30px;
            border-radius: 50px;
            font-size: 16px;
            font-weight: 600;
            text-transform: uppercase;
            text-decoration: none;
            transition: all 0.3s ease;
            position: relative;
            border: 2px solid transparent;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }
        .primary-btn {
            background: linear-gradient(90deg, #1e90ff, #00d4ff);
            color: #fff;
        }
        .primary-btn:hover {
            background: linear-gradient(90deg, #00d4ff, #1e90ff);
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 8px 20px rgba(0, 123, 255, 0.4);
            border-color: #1e90ff;
        }
        .primary-btn::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background: #fff;
            transition: width 0.3s ease, left 0.3s ease;
        }
        .primary-btn:hover::before {
            width: 50%;
            left: 25%;
        }
        .secondary-btn {
            background: linear-gradient(90deg, #ff4d4d, #ff7878);
            color: #fff;
            border: 2px solid #ff4d4d;
        }
        .secondary-btn:hover {
            background: linear-gradient(90deg, #ff7878, #ff4d4d);
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 8px 20px rgba(255, 77, 77, 0.4);
            border-color: #ff7878;
        }
        .secondary-btn::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background: #fff;
            transition: width 0.3s ease, left 0.3s ease;
        }
        .secondary-btn:hover::before {
            width: 50%;
            left: 25%;
        }
        .alert {
            margin-bottom: 20px;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .join-section {
                padding: 60px 0;
            }
            .section-title h2 {
                font-size: 36px;
            }
            .join-form {
                padding: 30px;
            }
        }
        @media (max-width: 576px) {
            .section-title h2 {
                font-size: 28px;
            }
            .join-form {
                padding: 20px;
            }
            .form-actions {
                flex-direction: column;
            }
            .primary-btn, .secondary-btn {
                width: 100%;
                margin: 10px 0;
            }
        }
    </style>
{% endblock %}