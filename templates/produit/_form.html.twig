{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.prix) }}
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.prix) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.stock) }}
                {{ form_widget(form.stock, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.stock) }}
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                {{ form_label(form.categorie) }}
                {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.categorie) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.imageFile) }}
                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.imageFile) }}
                {% if produit.imagePath %}
                    <div class="mt-2">
                        <img src="{{ asset('uploads/products/' ~ produit.imagePath) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="max-width: 150px">
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Back to list</a>
    </div>
{{ form_end(form) }} 