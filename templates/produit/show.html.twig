{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h1>Product Details</h1>
                
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <h5 class="card-title">{{ produit.nom }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Category: {{ produit.categorie }}</h6>
                        </div>

                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>ID:</th>
                                    <td>{{ produit.id }}</td>
                                </tr>
                                <tr>
                                    <th>Price:</th>
                                    <td>â‚¬{{ produit.prix|number_format(2) }}</td>
                                </tr>
                                <tr>
                                    <th>Stock:</th>
                                    <td>
                                        <span class="badge {% if produit.stock < 10 %}bg-danger{% else %}bg-success{% endif %}">
                                            {{ produit.stock }}
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="mt-4">
                            <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">
                                <i class="fas fa-list"></i> Back to list
                            </a>
                            <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                <button class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                {% if produit.imagePath %}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Product Image</h5>
                            <img src="{{ asset(produit.imagePath) }}" alt="{{ produit.nom }}" class="img-fluid rounded">
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %} 