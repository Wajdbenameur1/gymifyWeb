{% extends 'base.html.twig' %}

{% block title %}Products Management{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Products Management</h1>
            <a href="{{ path('app_produit_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Product
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for produit in produits %}
                    <tr>
                        <td>{{ produit.id }}</td>
                        <td>
                            {% if produit.imagePath %}
                                <img src="{{ asset(produit.imagePath) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="max-width: 50px">
                            {% else %}
                                <span class="text-muted">No image</span>
                            {% endif %}
                        </td>
                        <td>{{ produit.nom }}</td>
                        <td>â‚¬{{ produit.prix|number_format(2) }}</td>
                        <td>
                            <span class="badge {% if produit.stock < 10 %}bg-danger{% else %}bg-success{% endif %}">
                                {{ produit.stock }}
                            </span>
                        </td>
                        <td>{{ produit.categorie }}</td>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');" style="display: inline-block;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No products found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 