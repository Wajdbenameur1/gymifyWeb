{% extends 'responsable/homepage_responsable.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    <style>
        .team-event-card {
            transition: all 0.3s ease;
            border-radius: 15px;
            min-height: 550px;
            display: flex;
            flex-direction: column;
            background: linear-gradient(145deg, #ffffff, #f0f4f8);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }
        .team-event-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        .team-event-image {
            height: 220px;
            width: 100%;
            object-fit: cover;
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
            background-color: #e9ecef;
        }
        .team-event-card .card-body {
            flex-grow: 1;
            padding: 25px;
        }
        .team-event-card .card-title {
            font-size: 1.4rem;
            font-weight: 700;
            margin-bottom: 12px;
            color: #2c3e50;
        }
        .team-event-card .text-muted {
            font-size: 0.9rem;
        }
        .team-event-card p {
            margin-bottom: 10px;
            font-size: 0.95rem;
            color: #555;
        }
        .team-event-card strong {
            font-weight: 600;
            color: #333;
        }
        .team-event-card .card-footer {
            padding: 15px 25px;
            background: #f8f9fa;
            border-bottom-left-radius: 15px;
            border-bottom-right-radius: 15px;
            border-top: 1px solid #dee2e6;
        }
        .btn-icon {
            width: 45px;
            height: 45px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.3s ease;
            font-size: 1.1rem;
        }
        .btn-icon:hover {
            transform: scale(1.15);
        }
        .btn-outline-secondary {
            border-color: #6c757d;
            color: #6c757d;
        }
        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }
        .btn-outline-primary {
            border-color: #007bff;
            color: #007bff;
        }
        .btn-outline-primary:hover {
            background-color: #007bff;
            color: #fff;
        }
        .btn-outline-danger {
            border-color: #dc3545;
            color: #dc3545;
        }
        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }
        .team-event-card .card-footer .d-flex {
            justify-content: center;
        }
        @media (max-width: 768px) {
            .team-event-card {
                min-height: 500px;
            }
            .team-event-image {
                height: 180px;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
        <div>
            <h3 class="fw-bold mb-3">{{ page_title }}</h3>
            <h6 class="op-7 mb-2">View events associated with teams</h6>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="row">
        {% for equipe_event in equipe_events %}
            {% set event = equipe_event.event %}
            {% set equipe = equipe_event.equipe %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card team-event-card shadow-sm">
                    <img src="{{ event.imageUrl ?? '/images/placeholder.jpg' }}" class="card-img-top team-event-image" alt="{{ event.nom }}" onerror="this.src='/images/placeholder.jpg';">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.nom }}</h5>
                        <p class="text-muted small">
                            <i class="fas fa-calendar-alt me-2"></i>
                            {{ event.date|date('F j, Y') }} at {{ event.heureDebut|date('H:i') }} - {{ event.heureFin|date('H:i') }}
                        </p>
                        <p><strong>Team:</strong> {{ equipe.nom }}</p>
                        <p><strong>Type:</strong> {{ event.type ? event.type.value|capitalize : 'N/A' }}</p>
                        <p><strong>Reward:</strong> {{ event.reward ? event.reward.value|capitalize : 'N/A' }}</p>
                        <p><strong>Description:</strong> {{ event.description|length > 80 ? event.description|slice(0, 80) ~ '...' : event.description }}</p>
                        <p><strong>Location:</strong> {{ event.lieu|default('Not specified') }}</p>
                    </div>
                    <div class="card-footer bg-white border-0">
                        <div class="d-flex gap-3">
                            <a href="{{ path('app_equipe_event_show1', {'id': equipe_event.id}) }}" class="btn btn-icon btn-outline-secondary rounded-circle" title="Details">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a href="{{ path('app_equipe_event_edit', {'id': equipe_event.id}) }}" class="btn btn-icon btn-outline-primary rounded-circle" title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <form method="post" action="{{ path('app_equipe_event_delete', {'id': equipe_event.id}) }}" onsubmit="return confirm('Are you sure you want to delete this team-event association?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe_event.id) }}">
                                <button class="btn btn-icon btn-outline-danger rounded-circle" title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">No team-event associations found.</div>
            </div>
        {% endfor %}
    </div>
{% endblock %}